<%- include('includes/header'); -%>

<!-- Top content -->
<div class="top-content">
    <div class="inner-bg">
        <div class="container">
            <div class="row">
                <div class="form-top">
                    <div class="form-top-left">
                        <h3>Signup to our site</h3>
                        <p>Enter your username , password to sign up on:</p>
                    </div>
                    <div class="form-top-right">
                        <i class="fa fa-key"></i>
                    </div>
                </div>
                <div class="form-bottom">

                    <% if (error.length > 0) { %>
                    <div class="alert alert-danger"><%- error %></div>
                    <% } %>

                    <% if (success.length > 0) { %>
                    <div class="alert alert-success"><%- success %></div>
                    <% } %>

                    <form role="form" action="/signup" role="form" method="post" method="post" class="login-form">
                        <div class="form-group">
                            <label for="username" class="sr-only">Name</label>
                            <input type="text" name="username" id="username" class="form-control form-username" required
                                placeholder="Name" />
                        </div>

                        <div class="form-group">
                            <label for="email" class="sr-only">Email</label>
                            <input type="email" name="email" id="email" class="form-control  form-username" required
                                placeholder="Email" />
                        </div>

                        <div class="form-group">
                            <label for="password" class="sr-only">Password</label>
                            <input type="password" name="password" id="password" class="form-control  form-username"
                                required placeholder="Password" />
                        </div>

                        <div class="form-group">
                            <label for="plz" class="sr-only">PLZs</label>
                            <button id="add_Field">Add New</button>
                            <div id="plzContainer">
                                <div class="plzs">
                                    <input type='number' id="plz_i_0" max='9999' name="plz_interests" class="form-control form-username plz_input" required />
                                    <div id="plz_x_0" class="plz_close">‚ùå</div>
                                </div>
                            </div>
                        </div>

                        <button type="submit" class="btn">Sign up!</button>

                    </form>
                </div>
            </div>
        </div>
    </div>

</div>

<script src="/js/addFormField.js"></script>
<%- include('includes/footer'); -%>